{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "declaration": true, // 自动生成.d.ts文件
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@util/*": [
        "src/util/*",
      ],
      "@bin/*": [
        "src/bin/*",
        "src/bin/platform/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "index.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}